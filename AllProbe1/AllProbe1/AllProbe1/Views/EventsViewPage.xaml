<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllProbe1.Views.EventsViewPage" 
             Title="Events">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="lblUdpated" Order="Primary" Priority="0"/>
    </ContentPage.ToolbarItems>
  
    <Label x:Name="lblErrorEvents" HorizontalOptions="Center"  HeightRequest="30" Margin="20" IsVisible="False"></Label>
    <StackLayout Orientation="Vertical">
        <ListView ItemsSource="{Binding events}" 
            ItemTapped="Handle_ItemTapped"
            ItemSelected="Handle_ItemSelected"
            HasUnevenRows="true"
            GroupDisplayBinding="{Binding Title}"
            GroupShortNameBinding="{Binding Title}"
            IsGroupingEnabled="true"
            IsPullToRefreshEnabled="false"
            CachingStrategy="RecycleElement"
            BackgroundColor="White"
            HorizontalOptions="Fill"
            x:Name="eventsList">
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell Height="30">
                        <Label Text="{Binding Title}" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="30" Margin="5"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
            <ListView.Header>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="FillAndExpand"
                             Padding="5"
                             BackgroundColor="#dadada">
                    <Label  HorizontalOptions="Start"
                            Margin="5"
                            WidthRequest="20"
                            HeightRequest="14"></Label>
                    <Label Text="Event"
                           HorizontalTextAlignment="Start"
                           HorizontalOptions="Start"
                           TextColor="#6a6a6a"
                           FontAttributes="Bold"
                           WidthRequest="100"/>
                    <Label Text="Type"
                           HorizontalTextAlignment="Center"
                           HorizontalOptions="CenterAndExpand"
                           TextColor="#6a6a6a"
                           FontAttributes="Bold"
                           WidthRequest="100"/>
                    <Label Text="Elapsed"
                           HorizontalTextAlignment="Center"
                           HorizontalOptions="EndAndExpand"
                           TextColor="#6a6a6a"
                           FontAttributes="Bold"
                           WidthRequest="71"/>
                </StackLayout>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout BackgroundColor="#fff" Padding="4" Orientation="Vertical">
                            <StackLayout Orientation="Horizontal">
                                <Label HorizontalOptions="Start"
                                       BackgroundColor="{Binding SeverityColor}"
                                       WidthRequest="20"
                                       HeightRequest="20"
                                       Margin="4"/>
                                <Label Text="{Binding EventName}"
                                       HorizontalOptions="Start"
                                       HorizontalTextAlignment="Start"
                                       LineBreakMode="WordWrap"
                                       Margin="4"
                                       TextColor="#757575"
                                       FontSize="13" />
                                <Label Text="{Binding ProbeType}"
                                       HorizontalOptions="CenterAndExpand"
                                       HorizontalTextAlignment="Center"
                                       Margin="4"
                                       TextColor="#757575"
                                       FontSize="13"/>
                                <Label Text="{Binding ElapsedTime}"
                                       HorizontalOptions="EndAndExpand"
                                       HorizontalTextAlignment="End"
                                       Margin="4"
                                       TextColor="#757575"
                                       FontSize="13"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
 